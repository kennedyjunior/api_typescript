generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     Int       @id @default(autoincrement())
  nome                   String
  idade                  Int
  email                  String    @unique
  telefone               String    @unique
  senha                  String
  role                   Role @default(ALUNO)

  planoAluno             Int?
  Plan                   Plan? @relation(fields: [planoAluno], references: [id])
  treinadorResponsavelId Int?     
  Trainer                Trainer?  @relation(fields: [treinadorResponsavelId], references: [id])

  @@map("users")
}

enum Role{
  ALUNO
  ADMIN
}

model Plan {
  id           Int    @id @default(autoincrement())
  nome         String
  valor        Int
  duracaoEmMes Int

  alunos       User[]

  @@map("plans")
}

model Trainer {
  id        Int      @id @default(autoincrement())
  nome      String
  idade     Int
  email     String   @unique
  senha     String
  telefone  String   @unique
  alunos    User[]
  role      Role @default(ADMIN)

  @@map("trainers")
}
